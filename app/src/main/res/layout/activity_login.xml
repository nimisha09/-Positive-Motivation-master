<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    tools:context="com.example.android.positivemotivation.Login">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:layout_marginTop="80dp"
        android:hint="enter the user id"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/et2"
        android:inputType="textPassword"
        android:hint="enter password"
        android:layout_below="@+id/et1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:text="Forget Password"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et2"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_marginTop="10dp"
        android:id="@+id/bu1"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup"
        android:layout_marginTop="100dp"
        android:id="@+id/bu2"
        android:layout_below="@+id/bu1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup with facebook"
        android:layout_marginTop="10dp"
        android:id="@+id/bu3"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bu2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup with google "
        android:layout_marginTop="10dp"
        android:id="@+id/bu4"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bu2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
